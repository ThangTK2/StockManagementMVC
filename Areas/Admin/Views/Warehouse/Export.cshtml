@model StockManagementMVC.Models.WarehouseTransactionModel

@{
    ViewData["Title"] = "Xuất kho";
}

<div class="container" style="padding: 3rem 8rem;">
    <h2 class="text-danger fw-bold mb-3">Xuất kho</h2>
    <a asp-action="ListWarehouse" asp-controller="Warehouse" class="btn btn-danger fw-semibold mb-3">
        <i class="bi bi-plus-circle"></i> Danh sách nhập/xuất kho
    </a>

    <form asp-action="Export" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-semibold">Chọn sản phẩm</label>
            <select asp-for="ProductId" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Products, "Id", "NameWithQuantity"))">
                <option value="">-- Chọn sản phẩm --</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label fw-semibold"></label>
            <input asp-for="Quantity" class="form-control" type="number" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label fw-semibold"></label>
            <textarea asp-for="Notes" class="form-control"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger fw-semibold">Xuất kho</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index"
           class="btn btn-secondary fw-semibold">
            Danh sách sản phẩm
        </a>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
